<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_drawer"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/drawer_header_layout"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/drawer_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@drawable/ic_weibo" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/divide_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/image_shade" >
        
        <Button
            android:id="@+id/drawer_firstPage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_page"
            android:textSize="@dimen/text_size_70"
            android:textColor="@color/white"
            android:background="@drawable/bg_textview"/>
        
    </LinearLayout>

</LinearLayout>